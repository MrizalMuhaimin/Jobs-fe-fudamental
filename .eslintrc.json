{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            2,
            200,
            2
        ],
        "no-console": "warn",
        "no-alert": "warn",
        "no-undef": "error"
    },
    "overrides": [
        {
          "files": [
            ""
          ],
          "rules": {
            "import/no-anonymous-default-export": "off"
          }
        }
      ]
}
