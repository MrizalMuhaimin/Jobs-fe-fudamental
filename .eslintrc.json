{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends":["plugin:react/recommended", "standard","plugin:decorator-position/ember"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": "",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            2,
            "error",
            "always"
        ],
        "max-len": [
            2,
            200,
            2
        ],
        "no-console": "warn",
        "no-alert": "warn",
        "no-undef": "error"
    },
    "overrides": [
        {
          "files": [
            ""
          ],
          "rules": {
            "import/no-anonymous-default-export": "off"
          }
        }
      ]
}
